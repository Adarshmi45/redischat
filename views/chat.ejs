<!DOCTYPE html>
<html lang="en">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Meow+Script&display=swap" rel="stylesheet">
<head>
    <meta charset="UTF-8">
    <title></title>
    <style>
        .cont{
            text-align: center;
            padding: auto;
            padding-top: 120px;
            margin: auto;
            border-top: 10cm;
            font-size: 20px;
            font-family: 'Times New Roman', Times, serif;
            font-style: inherit;
        }
        .bd{
            background-color: rgb(0, 0, 0)
        }
        .header {
            margin: inherit;
          padding: 60px;
          text-align: center;
          background: #055f4d;
          color: 1
          rgb(0, 0, 0);
          font-size: 40px;
          font-family: 'Meow Script', cursive;
            font-style: inherit;
            color: rgb(253, 253, 253);
        }
        </style>
</head>
<body>
    <div class="header">
    <h1>Mata Kondo Da Messenger</h1></div>
    <div class="cont">
    <div id="messages">
        <input id="message" type="text" name="message" placeholder="Message" />
        <br />
        <br />
        <button onClick="emitData()">Send</button>
    </div>

    <div id="joined"></div></div>

</body>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io("http://localhost:5000");

    function emitData() {
        const message = document.querySelector("#message").value;
        if (message.length > 0) {
            socket.emit("message", { message, from: "<%= username %>" });
        }
    }

    socket.on("message", ({ from, message }) => {
        const messageElement = document.createElement("h5");
        messageElement.innerText = `${from}: ${message}`;
        document.querySelector("#messages").appendChild(messageElement);
    });

    socket.on("joined", username => {
        const element = document.createElement("h5");
        element.innerText = `${username} has joined`;

        document.querySelector("#joined").appendChild(element);
    });
</script>
</html>
